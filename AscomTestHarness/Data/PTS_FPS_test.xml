<?xml version="1.0" encoding="utf-8" ?>
<Test name="Sunshine Coast University Hospital - Pneumatic Tube System and Fire Protection System Test">
  <Integration name="Pneumatic Tube System Test" type="SMTPInterface" active="true">
    <Connection>
      <Address>10.49.211.26</Address>
      <Port>25</Port>
    </Connection>
    <!--Simulate a carrier arriving at PAT and W4A-->
    <Messages name="PTS-Carrier Arrived" type="SMTPMessage" delay="0" repeat="1" active="true">
      <!--PAT received a carrier-->
      <Message name="PTS-CAR-001 - #4" delay="0" repeat="1" active="true">
        <From>PTS@qh.qld.gov.au</From>
        <To>messaging@qh.qld.gov.au</To>
        <Subject>PAT received a carrier</Subject>
        <Body>Carrier 1 successfully sent from EMERGENCY RESUS - MULTISEND (L0) to PATHOLOGY MAIN BENCH - RECEIVE ONLY (L5)</Body>
      </Message>
      <!--W4A received a carrier-->
      <Message name="PTS-CAR-002 - #4" delay="0" repeat="1" active="false">
        <From>PTS@qh.qld.gov.au</From>
        <To>messaging@qh.qld.gov.au</To>
        <Subject>W4A received a carrier</Subject>
        <Body>Carrier 2 successfully sent from PATHOLOGY MAIN BENCH - MULTISEND (L5) to IPU WARD 4A (L4)</Body>
      </Message>
    </Messages>
  </Integration>
  <!--Simulate Fire Alarm-->
  <Integration name="Fire Protection System Test" type="TCPIntegration" delay="0" repeat="1" active="false">
    <Connection>
      <Address>10.49.211.17</Address>
      <Port>2222</Port>
    </Connection>
    <!--Delivery of a Fire Alarm message-->
    <Messages name="FPS Smoke-Test" type="ConnectMessage" delay="0" repeat="1" active="false">
      <Message name="FPS-FIR-001 - #4" delay="150" repeat="1" active="true">
        <Body>|!F1* 1:16:02 pm THU 09-JUN-16 COMPUTER ROOM - AZF3 SMOKE DETECTOR ALARM_</Body>
      </Message>
      <!--Delivery of a Fire Alarm without a message body-->
      <Message name="FPS-FIR-002 - #4" delay="150" repeat="1" active="false">
        <Body>|_</Body>
      </Message>
    </Messages>
  </Integration>
</Test>